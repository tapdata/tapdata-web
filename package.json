{
  "name": "daas-monorepo",
  "private": true,
  "scripts": {
    "start:daas": "pnpm --filter daas start:test ",
    "start:dfs": "pnpm --filter dfs start:test",
    "dev:daas": "pnpm --filter daas start:dev",
    "dev:dfs": "pnpm --filter dfs start:dev",
    "build:daas": "pnpm --filter daas build",
    "build:dfs": "pnpm --filter dfs build",
    "clean": "rm -rf node_modules && pnpm -r exec -- rm -rf node_modules"
  },
  "dependencies": {
    "@vue/composition-api": "^1.6.2",
    "element-ui": "2.15.7",
    "lodash": "^4.17.15",
    "vue": "^2.6.14",
    "vue-router": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "@vue/cli-plugin-babel": "~4.5.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "@vue/cli-plugin-router": "~4.5.0",
    "@vue/cli-plugin-vuex": "~4.5.0",
    "@vue/cli-service": "~4.5.0",
    "@vue/eslint-config-typescript": "^9.1.0",
    "babel-plugin-dynamic-import-node": "^2.3.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.1.0",
    "prettier": "^2.2.1",
    "sass": "^1.34.1",
    "sass-loader": "^10.2.0",
    "tslib": "^2.4.0",
    "typescript": "~4.5.5"
  },
  "pnpm": {
    "overrides": {
      "@formily/core": "^2.1.2",
      "@formily/element": "^2.1.2",
      "@formily/json-schema": "^2.1.2",
      "@formily/path": "^2.1.2",
      "@formily/reactive": "^2.1.2",
      "@formily/reactive-vue": "^2.1.2",
      "@formily/shared": "^2.1.2",
      "@formily/vue": "^2.1.2",
      "vue-demi": "^0.12.1",
      "vue": "^2.6.14"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
